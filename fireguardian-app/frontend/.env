# Configuración del Frontend - FireGuardian

# URLs de la API (múltiples opciones para diferentes entornos)
# La aplicación intentará conectarse a estas URLs en orden hasta encontrar una que funcione
VITE_API_URL=http://localhost:3001
# URLs de fallback para acceso desde red local y dispositivos móviles
VITE_API_URL_FALLBACK_1=http://192.168.56.1:3001
VITE_API_URL_FALLBACK_2=http://10.0.2.64:3001

# Configuración de desarrollo
VITE_NODE_ENV=development

# Configuración de la aplicación
VITE_APP_NAME=FireGuardian
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema de Inventario de Extintores

# Configuración de autenticación
VITE_TOKEN_STORAGE_KEY=auth_token
VITE_USER_STORAGE_KEY=user_data

# Configuración de React Query
VITE_QUERY_STALE_TIME=300000
VITE_QUERY_CACHE_TIME=600000

# Configuración de archivos
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Configuración de notificaciones
VITE_TOAST_DURATION=4000
VITE_TOAST_POSITION=top-right

# Configuración de paginación
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# URLs externas (opcional)
# VITE_SUPPORT_URL=https://support.fireguardian.com
# VITE_DOCS_URL=https://docs.fireguardian.com

# Configuración de debugging
VITE_DEBUG=false
VITE_SHOW_DEVTOOLS=true
