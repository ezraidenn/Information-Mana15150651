# Backend Configuration
NODE_ENV=development
PORT=3001

# Database
DB_PATH=./database/fireguardian.db

# JWT Configuration
JWT_SECRET=change-this-secret-key-in-production-use-strong-random-string
JWT_EXPIRES_IN=24h

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://192.168.56.1:3000,http://10.0.2.64:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
