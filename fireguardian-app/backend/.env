# Configuración del servidor
NODE_ENV=development
PORT=3001

# Configuración de JWT
JWT_SECRET=fireguardian-super-secret-key-2025-ycc-extintores

# Configuración de la base de datos
DATABASE_PATH=../fireguardian.db
DATABASE_ENCRYPTION=false
DATABASE_PASSWORD=

# Configuración de archivos
IMAGES_PATH=../images
BACKUPS_PATH=../backups
QR_CODES_PATH=../qr_codes
LOGS_PATH=../logs

# Configuración de archivos
MAX_IMAGE_SIZE_MB=5
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp

# Configuración de backup automático
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL_DAYS=7
BACKUP_RETENTION_DAYS=30

# Configuración de logs
LOG_RETENTION_DAYS=90
LOG_LEVEL=info

# Configuración de notificaciones
EMAIL_ENABLED=false
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=fireguardian@ycc-extintores.com

# Configuración de alertas
DAYS_BEFORE_EXPIRATION_WARNING=30
MAINTENANCE_REMINDER_DAYS=365

# Configuración de red
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de la aplicación
APP_NAME=FireGuardian
APP_VERSION=1.0.0
COMPANY_NAME=YCC Extintores
